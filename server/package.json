{
  "name": "server",
  "version": "1.0.1",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx watch src/server.ts",
    "build": "tsup src --format esm",
    "start": "prisma migrate deploy && node dist/server.mjs",
    "wait-api": "bash -c 'url=\"$1\"; echo \"Waiting for API at $url...\"; for i in $(seq 1 30); do echo \"Attempt $i/30: Testing $url\"; if curl -f --connect-timeout 5 --max-time 10 \"$url\" > /dev/null 2>&1; then echo \"API is ready at $url\"; exit 0; fi; sleep 5; done; echo \"API failed to start at $url\"; exit 1' --",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
